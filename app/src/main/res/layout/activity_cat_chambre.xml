<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cat_chambre"
    android:background="#000"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="name Hotel"
        android:id="@+id/hotn"
        android:textColor="#fff"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:fontFamily="@font/baloo_tammudu_2_semibold"
        android:text="Choisie la categorie de la chombre :"
        android:textColor="#87E8F4"
        android:textSize="20dp" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/chambre_button"
                android:text="1 \n 2000 da"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:textColor="#fff"
                android:id="@+id/type1"

                android:textSize="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="110dp"
                android:layout_height="100dp"
                 android:background="@drawable/chambre_button2"
                android:layout_margin="4dp"
                android:text="2 \n 3000 da"
                android:textStyle="bold"
                android:id="@+id/type2"
                android:textSize="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="4dp"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/chambre_button"
                android:text="3 \n 4000 da"
                android:textStyle="bold"
                android:textColor="#fff"

                android:id="@+id/type3"
                android:textSize="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="4dp"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/chambre_button2"

                android:text="4 \n 5000 da"
                android:textStyle="bold"
                android:id="@+id/type4"
                android:textSize="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:text="5 \n 6000 da"
                android:textStyle="bold"
                android:background="@drawable/chambre_button"
                android:textColor="#fff"

                android:id="@+id/type5"
                android:textSize="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/chambre_button2"

                android:text="6 \n 7000 da"
                android:textStyle="bold"
                android:id="@+id/type6"
                android:textSize="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:text="7 \n 8000 da"
                android:textStyle="bold"
                android:background="@drawable/chambre_button"
                android:textColor="#fff"

                android:id="@+id/type7"
                android:textSize="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="4dp"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:text="8 \n 10000 da"
                android:textStyle="bold"
                android:background="@drawable/chambre_button2"

                android:id="@+id/typ8"
                android:textSize="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="4dp"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@drawable/chambre_button"
                android:textColor="#fff"

                android:text="9 \n 12000 da"
                android:textStyle="bold"
                android:id="@+id/typ9"
                android:textSize="20dp"/>

        </LinearLayout>

    </HorizontalScrollView>
          <ScrollView
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text=""

                      android:textSize="30dp"
                      android:id="@+id/name_cat"
                      android:gravity="center_horizontal"
                      android:textColor="#fff"
                      android:layout_gravity="center_horizontal"/>
                  <HorizontalScrollView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                          <ImageView
                              android:layout_width="370dp"
                              android:layout_height="230dp"
                              android:id="@+id/image_cat"/>
                          <ImageView
                              android:layout_width="370dp"
                              android:layout_height="230dp"
                              android:id="@+id/image_cat2"/>

                      </LinearLayout>
                  </HorizontalScrollView>

                  <androidx.appcompat.widget.AppCompatButton
                      android:layout_width="match_parent"
                      android:text="réserver"
                      android:textSize="30dp"
                      android:layout_marginTop="3dp"
                      android:id="@+id/rsrv"
                      android:background="#068176"
                      android:layout_height="wrap_content"/>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_margin="6dp"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/pre"
                          android:src="@drawable/person_24"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="20dp"
                          android:id="@+id/pre2"
                          android:textColor="#fff"
                          android:text="  2 personnes"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_margin="6dp"

                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/lie"
                          android:src="@drawable/ic_baseline_bedroom_child_24"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#fff"
                          android:textSize="20dp"
                          android:id="@+id/lie2"
                          android:text="  2 lit"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_margin="6dp"

                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/wifi"
                          android:src="@drawable/wifi_4_bar_24"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#fff"
                          android:textSize="20dp"
                          android:id="@+id/wifi2"
                          android:text="  Accès Wi-Fi gratuit"/>

                  </LinearLayout>
                  <LinearLayout
                      android:layout_margin="6dp"

                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/paye"
                          android:src="@drawable/done_24"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#fff"
                          android:textSize="20dp"
                          android:id="@+id/paye2"
                          android:text="  Aucun prépaiement nécessaire"/>

                  </LinearLayout>
                  <TextView
                      android:layout_margin="6dp"

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#fff"
                      android:textSize="23dp"
                      android:textStyle="bold"
                      android:id="@+id/aute"
                      android:text="  Autres :"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#fff"
                      android:textSize="20dp"
                      android:id="@+id/autre2"
                      android:text="- Chambres communicantes disponibl
                      - Service de ménage quotidien \n- Chauffage par le sol \n- Décoration individuelle
                       \n- Ameublement individuel  \n- Animaux de compagnie admis
                       \n- Chambres insonorisées \n- Service de couverture \n- Garde-robe ou placard \n"/>
              </LinearLayout>
          </ScrollView>
</LinearLayout>